# Example environment variables for dam_backend
# Copy to .env and fill values before starting the app

# Server
PORT=3001

# MongoDB connection (use your DB URI or keep the local fallback)
MONGODB_URI=mongodb://localhost:27017/dam_backend

# JWT
JWT_SECRET=change_me_to_a_strong_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Callback URL must match exactly the one registered in Google Console
# include global prefix if you use it (default in app: /api/v1)
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/redirect

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
# Callback URL must match exactly the one registered in Facebook App settings
FACEBOOK_CALLBACK_URL=http://localhost:3001/api/v1/auth/facebook/redirect

# Frontend URL to redirect after successful OAuth (optional)
# Example: http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Optional: DB user, password, other settings
# DB_USER=
# DB_PASS=
